{
  "name": "aelin-subgraph",
  "version": "1.0.0",
  "scripts": {
    "codegen": "graph codegen --output-dir src/types/",
    "build": "graph build",
    "deploy:studio:init": "node scripts/deploy-studio.js",
    "deploy:hosted:init": "node scripts/deploy-hosted.js",
    "deploy:studio": "npm run prepare:network && graph auth --studio $GRAPH_DEPLOY_KEY && graph deploy --studio $REPO",
    "deploy:hosted": "npm run prepare:network && graph auth --product hosted-service $GRAPH_ACCESS_TOKEN && graph deploy --product hosted-service $REPO",
    "prepare:network:init": "node scripts/prepare-network.js",
    "prepare:network": "mustache config/$NETWORK.json subgraph.template.yaml > subgraph.yaml && mustache config/$NETWORK.json templatesVersions.template.mustache > templatesVersions.ts && npm run codegen",
    "verify-abis": "node config/verify-abis.js",
    "lint:fix": "eslint --fix \"./**/*.{js,jsx,ts,tsx}\"",
    "prepare": "husky install",
    "prettier:fix": "prettier --write \"./**/*.{js,jsx,ts,tsx}\""
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.40.0",
    "@graphprotocol/graph-ts": "^0.25.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "args": "^5.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "mustache": "^4.2.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
